<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Producto.modificar_producto"
    android:orientation="vertical">
    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ACTUALIZAR DE PRODUCTOS"
        android:layout_marginLeft="33dp"
        android:textStyle="bold"
        android:textSize="21dp"
        android:fontFamily="serif-monospace"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="40dp" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"/>


    <EditText
        android:id="@+id/etNombreProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:minHeight="45dp"
        android:paddingLeft="20dp"
        android:textStyle="bold"
        android:background="@color/cardview_shadow_start_color"
        android:hint="Ingrese nombre del producto" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <EditText
        android:id="@+id/etDescripcionProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:minHeight="45dp"
        android:textStyle="bold"
        android:paddingLeft="20dp"
        android:background="@color/cardview_shadow_start_color"
        android:hint="DescripciÃ³n del producto" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <EditText
        android:id="@+id/etStockProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:minHeight="45dp"
        android:textStyle="bold"
        android:inputType="number"
        android:paddingLeft="20dp"
        android:background="@color/cardview_shadow_start_color"
        android:hint="Stock del producto" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <EditText
        android:id="@+id/etPrecioProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:minHeight="45dp"
        android:inputType="number"
        android:textStyle="bold"
        android:paddingLeft="20dp"
        android:background="@color/cardview_shadow_start_color"
        android:hint="Precio " />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textStyle="bold"
            android:text="Selecciona la categoria"/>
        <Spinner
            android:id="@+id/spCategoriaProducto"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/cardview_shadow_start_color"
            android:entries="@array/sp_categoria"
            android:spinnerMode="dialog"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp"/>


    <CheckBox
        android:id="@+id/cbEstadoProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Habilitar producto"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:layout_marginLeft="15dp"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnActualizarPro"
            android:text="Actualizar"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="15dp"
            android:layout_width="170dp"
            android:layout_height="48dp"
            android:background="@drawable/buttonshape"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCancelarP"
            android:text="Cancelar"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="15dp"
            android:layout_width="170dp"
            android:layout_height="48dp"
            android:background="@drawable/buttonshape"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>