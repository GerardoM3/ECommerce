<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Categoria.crear_categoria"
    android:orientation="vertical">
    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTRO DE CATEGORIAS"
        android:layout_marginLeft="33dp"
        android:textStyle="bold"
        android:textSize="26dp"
        android:fontFamily="serif-monospace"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="40dp" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"/>


    <EditText
        android:id="@+id/etNombreCategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:minHeight="45dp"
        android:paddingLeft="20dp"
        android:textStyle="bold"
        android:background="@color/cardview_shadow_start_color"
        android:hint="Ingrese nombre de la categoria" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <EditText
        android:id="@+id/etDescripcionCategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:minHeight="45dp"
        android:textStyle="bold"
        android:paddingLeft="20dp"
        android:background="@color/cardview_shadow_start_color"
        android:hint="Descripción de la categoria" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <CheckBox
        android:id="@+id/cbEstadoCategoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Habilitar categoría"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:layout_marginLeft="15dp"
        android:checked="true"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnGuardarC"
            android:text="Guadar"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="1dp"
            android:layout_width="170dp"
            android:layout_height="48dp"
            android:background="@drawable/buttonshape"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCancelarC"

            android:text="Cancelar"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="15dp"
            android:layout_width="170dp"
            android:layout_height="48dp"
            android:background="@drawable/buttonshape"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>