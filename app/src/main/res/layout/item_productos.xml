<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="180dp"
        app:cardCornerRadius="5dp"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:layout_margin="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:cardBackgroundColor="#F6F6F6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/camisa"
                android:layout_centerHorizontal="true"
                android:id="@+id/imageView"
                android:padding="10dp"/>
            <TextView
                android:id="@+id/tvnombrepro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Camisa"
                android:layout_below="@id/imageView"
                android:textSize="22dp"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif-condensed-medium"/>
            <TextView
                android:id="@+id/tvprecio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$10.00"
                android:layout_below="@id/tvnombrepro"
                android:textSize="22dp"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif-condensed-medium"/>

                <TextView
                    android:id="@+id/tvdespro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Camisa para verano "
                    android:layout_below="@id/tvprecio"
                    android:textSize="18dp"
                    android:padding="4dp"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="sans-serif-condensed-medium"/>
            <Button
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_below="@id/tvdespro"
                android:layout_centerHorizontal="true"
                android:textStyle="italic"
                android:text="Comprar"/>


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>