<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"

        card_view:cardElevation="3dp"
        card_view:cardCornerRadius="9dp"
        android:layout_margin="0dp"
        card_view:cardBackgroundColor="#611481"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="120dp"
                android:layout_height="145dp"
                android:src="@drawable/tienda"
                android:padding="4dp" />
            <TextView
                android:id="@+id/tvnombre_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/imageView"
                android:text="Nombre Tienda: "
                android:background="#1976D2"
                android:textSize="15dp"
                android:fontFamily="serif-monospace"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#ffffff" />
            <TextView
                android:id="@+id/tvnombre_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvnombre_title"
                android:layout_marginLeft="5dp"
                android:fontFamily="serif-monospace"
                android:layout_marginTop="1dp"
                android:textSize="15dp"
                android:layout_toRightOf="@id/imageView"
                android:text="SIMAN"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#ffffff"
                />
            <TextView
                android:id="@+id/tvdes_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvnombre_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@id/imageView"
                android:paddingLeft="0dp"
                android:paddingRight="15dp"
                android:text="DescripciÃ³n"
                android:background="#1976D2"
                android:textSize="15dp"
                android:textColor="#ffffff"
                android:fontFamily="serif-monospace"

                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                />
            <TextView
                android:id="@+id/tvdes_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvdes_title"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@id/imageView"
                android:text="Venta de pantalones"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:fontFamily="serif-monospace" />

            <Button
                android:id="@+id/btnVerTienda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvdes_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@id/imageView"
                android:text="Ver tienda >>"
                android:textSize="20dp"
                android:fontFamily="serif-monospace"
                android:background="#00000000"
                android:textColor="#ffffff"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>